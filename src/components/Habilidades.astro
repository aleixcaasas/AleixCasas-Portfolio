---
import habilidades from "../config/habilidades.json";
---

<section
    id="habilidades"
    class="mx-10 my-16 flex w-9/12 flex-col content-center items-center"
>
    <div class="container_titol" data-animation="center">
        <a href="#habilidades" class="text-black no-underline"
            ><h2
                class="relative my-8 block p-1 pl-2 pb-2 text-2xl font-bold uppercase [letter-spacing:10px] before:absolute before:bottom-0 before:left-0 before:z-[1] before:h-[1.8px] before:w-full before:origin-center before:scale-0 before:transform before:rounded-lg before:bg-[#FF2424] before:transition before:duration-500 before:ease-in-out before:content-[''] hover:before:scale-100"
            >
                Habilidades
            </h2></a
        >
    </div>

    <div
        class="mt-8 grid grid-cols-6 content-center items-center gap-5 gap-x-32 gap-y-12"
    >
        {
            habilidades.map((habilidad) => (
                <div class="center-lefthovers col-span-2 flex flex-col items-center transition duration-500 ease-in-out hover:scale-[1.2] hover:cursor-pointer hover:duration-500 hover:ease-in-out">
                    <img class="h-24" src={habilidad.image} alt="" />
                    <span class="mt-3">{habilidad.name}</span>
                </div>
            ))
        }
    </div>
</section>
